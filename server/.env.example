DJANGO_DEBUG=True
DJANGO_SECRET_KEY=dev-secret-key-change-me
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
TIME_ZONE=Asia/Tashkent

# Optional Postgres (leave commented to use SQLite locally)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=olx_clone
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres

# CORS
# CORS_ALLOWED_ORIGINS=http://localhost:3000

# Dev OTP code (used only when DJANGO_DEBUG true). If set, request endpoint returns this code.
OTP_DEV_CODE=000000

# Search
OPENSEARCH_URL=http://localhost:56984
OPENSEARCH_INDEX_PREFIX=olxclone
OPENSEARCH_INDEX_VERSION=1

# Celery / Redis (optional)
# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=${REDIS_URL}
# CELERY_TASK_ALWAYS_EAGER=True

# S3 media (optional for presigned uploads)
# MEDIA_BUCKET=your-bucket
# MEDIA_ENDPOINT=https://<s3-endpoint>
# MEDIA_ACCESS_KEY=xxxx
# MEDIA_SECRET_KEY=yyyy
# AWS_REGION=auto
